<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/reg_editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/reg_editText_sname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_editText_name"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/surname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/reg_editText_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="@string/emailReg"
            android:inputType="textEmailAddress"
            android:textColorLink="#50822F"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/reg_editText_sname"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/reg_editText_paswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_editText_email"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/passwordReg"
            android:inputType="textPassword"
            android:textColorLink="#50822F" />

        <EditText
            android:id="@+id/reg_editText_repaswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_editText_paswd"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/retype_password"
            android:inputType="textPassword"
            android:textColorLink="#50822F" />

        <Button
            android:id="@+id/reg_button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_editText_repaswd"
            android:layout_marginTop="40dp"
            android:background="#50822F"
            android:text="@string/register"
            android:textColor="#ffffff"
            android:onClick="Login"/>


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
