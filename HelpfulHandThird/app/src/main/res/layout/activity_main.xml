<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/emailLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColorLink="#50822F"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/passwordLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailLog"
            android:layout_below="@+id/emailLog"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorLink="#50822F" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/passwordLog"
            android:layout_marginTop="31dp"
            android:id="@+id/relativeLayout">

            <Button
                android:id="@+id/activity_main_Login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/activity_main_registration"
                android:background="#50822F"
                android:onClick="Menu"
                android:text="@string/login"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/activity_main_registration"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@+id/activity_main_Login"
                android:onClick="Registration"
                android:text="@string/register_here" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>